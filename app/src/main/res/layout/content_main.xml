<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/dayView6"
        android:layout_width="187dp"
        android:layout_height="79dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dayView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/dayView5" />

    <TextView
        android:id="@+id/dayView5"
        android:layout_width="187dp"
        android:layout_height="79dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dayView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/dayView4" />

    <TextView
        android:id="@+id/dayView4"
        android:layout_width="187dp"
        android:layout_height="79dp"
        android:layout_marginEnd="2dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dayView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/dayView3" />

    <TextView
        android:id="@+id/dayView7"
        android:layout_width="187dp"
        android:layout_height="79dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="203dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/goForward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/dayView6" />

    <TextView
        android:id="@+id/dayView3"
        android:layout_width="187dp"
        android:layout_height="79dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dayView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/dayView2" />

    <TextView
        android:id="@+id/dayView2"
        android:layout_width="187dp"
        android:layout_height="79dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dayView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/dayView1" />

    <TextView
        android:id="@+id/Todays_workout_header"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/holo_green_dark"
        android:text="@string/today_s_workout"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="8dp"
        android:layout_height="829dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/goForward"
        app:layout_constraintEnd_toStartOf="@+id/Upcoming_workout_header"
        app:layout_constraintStart_toEndOf="@+id/Todays_workout_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Upcoming_workout_header"
        android:layout_width="181dp"
        android:layout_height="64dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_green_dark"
        android:text="@string/upcoming_workouts"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goForward"
        android:layout_width="583dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="@string/add_new_workout"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/todaysWorkoutView"
        android:layout_width="387dp"
        android:layout_height="748dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/goForward"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Todays_workout_header" />

    <TextView
        android:id="@+id/dayView1"
        android:layout_width="187dp"
        android:layout_height="79dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dayView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/Upcoming_workout_header" />

</android.support.constraint.ConstraintLayout>